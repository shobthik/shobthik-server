{
  "name": "shobthik-server",
  "version": "1.0.0",
  "description": "The backend resource server for ShobThik running GraphQL",
  "main": "dist/index.js",
  "author": "ShobThik",
  "license": "MIT",
  "scripts": {
    "precompile": "mkdir -p ./dist && cp ./env/.env.local ./dist/.env.local",
    "compile": "tsc -w",
    "dev": "cross-env NODE_ENV=development nodemon ./dist/index.js",
    "build": "tsc",
    "postinstall": "yarn build",
    "start": "node ./dist/index.js",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/ormconfig.ts"
  },
  "dependencies": {
    "apollo-server-express": "^2.25.0",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-redis-subscriptions": "^2.4.0",
    "graphql-subscriptions": "^1.2.1",
    "graphql-type-json": "^0.3.2",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "ioredis": "^4.27.8",
    "jose": "^3.12.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.5",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.9.19",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.40",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/ioredis": "^4.27.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.1",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.2"
  }
}
